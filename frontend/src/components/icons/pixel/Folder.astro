---
/**
 * Folder Icon - Classic Mac folder
 * Used for companies/jobs in the Experience section
 */
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"svg"> {
  size?: number | string;
  color?: string;
}

const { size = 48, color = "currentColor", ...rest } = Astro.props;
---

<svg
  width={typeof size === "number" ? `${size}px` : size}
  height={typeof size === "number" ? `${size}px` : size}
  fill={color}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 20 16"
  preserveAspectRatio="xMidYMid meet"
  shape-rendering="crispEdges"
  {...rest}
>
  <!-- Folder tab -->
  <rect x="1" y="0" width="6" height="1"></rect>
  <rect x="0" y="1" width="1" height="1"></rect>
  <rect
    x="1"
    y="1"
    width="6"
    height="1"
    class="fill-yellow-400 dark:fill-yellow-600"></rect>
  <rect x="7" y="1" width="1" height="1"></rect>

  <!-- Folder body outline -->
  <rect x="0" y="2" width="1" height="13"></rect>
  <rect x="19" y="2" width="1" height="13"></rect>
  <rect x="1" y="15" width="18" height="1"></rect>

  <!-- Top edge -->
  <rect
    x="1"
    y="2"
    width="18"
    height="1"
    class="fill-yellow-400 dark:fill-yellow-600"></rect>
  <rect x="8" y="1" width="11" height="1"></rect>

  <!-- Folder body fill -->
  <rect
    x="1"
    y="3"
    width="18"
    height="12"
    class="fill-yellow-300 dark:fill-yellow-700"></rect>

  <!-- Highlight -->
  <rect
    x="1"
    y="3"
    width="17"
    height="1"
    class="fill-yellow-200 dark:fill-yellow-500"></rect>
  <rect
    x="1"
    y="4"
    width="1"
    height="10"
    class="fill-yellow-200 dark:fill-yellow-500"></rect>

  <!-- Shadow -->
  <rect
    x="2"
    y="14"
    width="17"
    height="1"
    class="fill-yellow-500 dark:fill-yellow-800"></rect>
  <rect
    x="18"
    y="4"
    width="1"
    height="10"
    class="fill-yellow-500 dark:fill-yellow-800"></rect>
</svg>
