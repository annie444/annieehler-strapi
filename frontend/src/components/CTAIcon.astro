---
interface Props {
  text: string;
}
const { text } = Astro.props;
---

<div class="flex flex-col items-center justify-center bg-transparent">
  <button
    type="button"
    class="harsh-neutral-600 mb-2 cursor-pointer border-2 border-solid border-neutral-900 bg-neutral-300 p-4 hover:bg-neutral-200 dark:border-neutral-100 dark:bg-neutral-700 dark:hover:bg-neutral-800"
  >
    <slot />
  </button>
  <div>
    {text}
  </div>
</div>
