---
/**
 * ResumeButton - CTA button with System 8.0 button styling
 */
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<
  HTMLAttributes<"a">,
  "href" | "class" | "class:list"
> {
  href: string;
  class?: string;
}

const { href, class: className = "", ...rest } = Astro.props as Props;
---

<a
  href={href}
  class:list={[
    "inline-flex items-center px-3 py-1",
    "harsh-grey-dark border-foreground bg-grey-light border-2 border-solid",
    "hover:bg-grey-dark active:translate-x-0.5 active:translate-y-0.5 active:shadow-none",
    "font-chi text-base font-semibold transition-all duration-100",
    className,
  ]}
  {...rest}
>
  <slot />
</a>
