---
/**
 * Hero Section - System 8.0 style with interactive terminal
 *
 * Features:
 * - Interactive terminal with commands to explore bio/skills
 * - Competency badges grouped by category
 * - Social links and resume download
 */
import AccordionWindow from "@components/windows/AccordionWindow.astro";
import TerminalContent from "@components/hero/TerminalContent.svelte";
import CompetencyBadge from "@components/hero/CompetencyBadge.astro";
import ResumeButton from "@components/hero/ResumeButton.astro";
import Github from "@components/icons/pixel/Github.astro";
import LinkedIn from "@components/icons/pixel/LinkedIn.astro";
import Mail from "@components/icons/pixel/Email.astro";
import {
  getTerminalCommands,
  type HeroProps,
  type Competency,
} from "@utils/content/hero";

type Props = HeroProps;

const { headline, tagline, competencies, socialLinks, resumeUrl } = Astro.props;

// Generate terminal commands from hero data
const terminalCommands = getTerminalCommands(Astro.props);

// Group competencies by category
const groupedCompetencies = competencies.reduce(
  (acc, comp) => {
    const category = comp.category || "other";
    if (!acc[category]) acc[category] = [];
    acc[category].push(comp);
    return acc;
  },
  {} as Record<string, Competency[]>,
);

const categoryLabels: Record<string, string> = {
  languages: "Languages",
  frameworks: "Frameworks",
  tools: "Tools",
  practices: "Practices",
  other: "Other",
};
---

<section
  class="flex min-h-[calc(100vh-4rem)] w-full flex-col justify-center px-4 py-8 md:px-8 md:py-12 lg:min-h-auto"
>
  <!-- Header with name and tagline -->
  <div class="mb-8 text-center">
    <h1 class="font-chi mb-2 text-4xl font-bold md:text-5xl">
      {headline}
    </h1>
    <p class="font-suse text-xl text-neutral-600 dark:text-neutral-400">
      {tagline}
    </p>
  </div>

  <!-- Terminal (main focus) -->
  <div class="mb-4 md:mb-6 lg:mb-8">
    <AccordionWindow title="Terminal" open={true} class="w-full">
      <TerminalContent
        commands={terminalCommands}
        username="guest"
        client:load
      />
    </AccordionWindow>

    <!-- Quick hint below terminal -->
    <p class="mt-3 text-center text-sm text-neutral-500 dark:text-neutral-400">
      Try typing
      <code
        class="font-jetbrains rounded bg-neutral-200 px-1 dark:bg-neutral-700"
        >whoami</code
      >,
      <code
        class="font-jetbrains rounded bg-neutral-200 px-1 dark:bg-neutral-700"
        >skills</code
      >, or
      <code
        class="font-jetbrains rounded bg-neutral-200 px-1 dark:bg-neutral-700"
        >help</code
      >
    </p>
  </div>

  <!-- Sidebar: Competencies + CTAs -->
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-5">
    <!-- Competencies Card -->
    <div
      class="harsh-neutral-600 border-em border-solid border-neutral-900 bg-neutral-50 p-4 lg:col-span-4 dark:border-neutral-100 dark:bg-neutral-900"
    >
      <h2 class="font-chi mb-4 text-lg font-bold">Skills</h2>
      <div class="flex flex-row flex-wrap gap-4">
        {
          Object.entries(groupedCompetencies).map(([category, comps]) => (
            <div class="flex flex-row flex-nowrap items-center gap-4">
              <h3 class="font-chi mr-4 text-base font-semibold tracking-wide text-neutral-500 dark:text-neutral-400">
                {categoryLabels[category] || category}
              </h3>
              <div class="col-span-3 flex flex-wrap gap-2">
                {comps.map((comp) => (
                  <CompetencyBadge competency={comp} />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- CTAs Card -->
    <div
      class="harsh-neutral-600 border-em border-solid border-neutral-900 bg-neutral-50 p-4 dark:border-neutral-100 dark:bg-neutral-900"
    >
      <h2 class="font-chi mb-4 text-lg font-bold">Connect</h2>

      <div class="flex flex-col gap-3">
        {
          resumeUrl && (
            <ResumeButton href={resumeUrl} class="w-full justify-center" />
          )
        }

        <div class="flex justify-center gap-3">
          {
            socialLinks.slice(0, 3).map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                title={link.label}
                class="harsh-neutral-600 flex h-10 w-10 items-center justify-center border-2 border-solid border-neutral-900 bg-neutral-300 transition-colors hover:bg-neutral-200 dark:border-neutral-100 dark:bg-neutral-700 dark:hover:bg-neutral-600"
              >
                {link.platform === "github" ? (
                  <Github
                    size={24}
                    class="fill-neutral-900 dark:fill-neutral-100"
                  />
                ) : link.platform === "linkedin" ? (
                  <LinkedIn
                    size={24}
                    class="fill-neutral-900 dark:fill-neutral-100"
                  />
                ) : link.platform === "email" ? (
                  <Mail
                    size={24}
                    class="fill-neutral-900 dark:fill-neutral-100"
                  />
                ) : (
                  <span class="font-chi text-base font-bold uppercase">
                    {link.platform.slice(0, 2)}
                  </span>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
