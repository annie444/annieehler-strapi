---
/**
 * CompetencyBadge - Skill/competency display with System 8.0 styling
 */
import type { Competency } from "@utils/content/hero";

interface Props {
  competency: Competency;
  class?: string;
}

const { competency, class: className = "" } = Astro.props;
---

<div
  class:list={[
    "inline-flex items-center gap-2 px-2 py-1",
    "border-2 border-solid border-neutral-900 bg-neutral-100",
    "dark:border-neutral-100 dark:bg-neutral-900",
    "text-base font-medium",
    className,
  ]}
>
  {competency.icon && <span>{competency.icon}</span>}
  <span class="font-chi">{competency.name}</span>
</div>
