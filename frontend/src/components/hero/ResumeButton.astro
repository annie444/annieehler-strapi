---
/**
 * ResumeButton - PDF download CTA with System 8.0 button styling
 */
interface Props {
  href: string;
  class?: string;
}

const { href, class: className = "" } = Astro.props;
---

<a
  href={href}
  download
  class:list={[
    "inline-flex items-center gap-3 px-4 py-2",
    "harsh-grey-dark border-foreground bg-grey-light border-2 border-solid",
    "hover:bg-grey-dark active:translate-x-0.5 active:translate-y-0.5 active:shadow-none",
    "font-chi text-base font-semibold transition-all duration-100",
    className,
  ]}
>
  <span>Download Resume</span>
</a>
