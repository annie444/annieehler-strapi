---
import AccordionWindow from "@components/AccordionWindow.astro";
import type { ProjectProps } from "@utils/content/project";
import { Blocks } from "@components/react/Blocks.tsx";
type Props = ProjectProps;
const { title, description, tags, link, text } = Astro.props;
---

<AccordionWindow title={title}>
  <p class="mb-4">
    {description}
  </p>
  {text ? <Blocks content={text} /> : null}
  <ul class="flex list-none gap-2 p-0">
    {
      tags.map((tag) => (
        <li class="border-2 border-solid border-neutral-900 bg-neutral-200 px-2 py-1 text-sm dark:border-neutral-300 dark:bg-neutral-800">
          {tag.name}
        </li>
      ))
    }
  </ul>
  <a
    href={link}
    class="mt-4 inline-block text-neutral-900 no-underline dark:text-neutral-50"
    >Read more â†’</a
  >
</AccordionWindow>
