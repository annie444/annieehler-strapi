---
/**
 * Hero Section - System 8.0 style with interactive terminal
 *
 * Features:
 * - Interactive terminal with commands to explore bio/skills
 * - Competency badges grouped by category
 * - Social links and resume download
 */
import TextEditorWindow from "@components/windows/TextEditorWindow.astro";
import CompetencyBadge from "@components/hero/CompetencyBadge.astro";
import ResumeButton from "@components/hero/ResumeButton.astro";
import Github from "@components/icons/pixel/Github.astro";
import LinkedIn from "@components/icons/pixel/LinkedIn.astro";
import Mail from "@components/icons/pixel/Email.astro";
import Dialog from "@components/dialogs/Dialog.astro";
import { type HeroProps, type Competency } from "@utils/content/hero";

type Props = HeroProps;

const { headline, tagline, competencies, socialLinks, resumeUrl, bio } =
  Astro.props;

// Group competencies by category
const groupedCompetencies = competencies.reduce(
  (acc, comp) => {
    const category = comp.category || "other";
    if (!acc[category]) acc[category] = [];
    acc[category].push(comp);
    return acc;
  },
  {} as Record<string, Competency[]>,
);

const categoryLabels: Record<string, string> = {
  languages: "Languages",
  frameworks: "Frameworks",
  tools: "Tools",
  practices: "Practices",
  other: "Other",
};
---

<section
  class="flex w-full flex-col items-center justify-center px-4 py-8 md:px-8 md:py-12"
>
  <!-- Header with name and tagline -->
  <div class="mb-8 text-center">
    <h1 class="font-chi mb-2 text-4xl font-bold md:text-5xl">
      {headline}
    </h1>
    <p class="font-suse text-foreground-dim text-xl">
      {tagline}
    </p>
  </div>

  <div
    class="flex flex-col items-start justify-center gap-4 md:flex-row md:gap-6 lg:gap-8"
  >
    <!-- Terminal (main focus) -->
    <div class="flex flex-col">
      <TextEditorWindow
        title="whoami.txt"
        class="mb-4 max-w-3xl md:mb-6 lg:mb-8"
      >
        <p class="font-suse text-foreground p-6 text-base whitespace-pre-wrap">
          {bio.trim()}
        </p>
      </TextEditorWindow>
    </div>

    <!-- Competencies Card -->
    <div class="flex flex-col">
      <Dialog class="max-w-3xl shrink p-4">
        <h2 class="font-chi mb-4 text-lg font-bold">Skills</h2>
        <div class="grid grid-cols-[5.85rem_1fr] gap-4">
          {
            Object.entries(groupedCompetencies).map(([category, comps]) => (
              <>
                <h3 class="font-chi text-foreground-dim mr-4 text-base font-semibold tracking-wide">
                  {categoryLabels[category] || category}
                </h3>
                <div class="flex flex-wrap gap-2">
                  {comps.map((comp) => (
                    <CompetencyBadge competency={comp} />
                  ))}
                </div>
              </>
            ))
          }
        </div>
      </Dialog>
    </div>
  </div>

  <!-- CTAs Card -->
  <div class="max-w-xl">
    <Dialog class="p-4">
      <h2 class="font-chi mb-4 text-lg font-bold">Connect</h2>

      <div class="flex flex-col gap-3">
        {
          resumeUrl && (
            <ResumeButton href={resumeUrl} class="w-full justify-center" />
          )
        }

        <div class="flex justify-center gap-3">
          {
            socialLinks.slice(0, 3).map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                title={link.label}
                class:list={[
                  "harsh-grey-dark border-foreground bg-grey-light hover:bg-grey-dark",
                  "flex h-10 w-10 items-center justify-center",
                  "border-2 border-solid transition-all duration-100",
                  "active:translate-x-0.5 active:translate-y-0.5 active:shadow-none",
                ]}
              >
                {link.platform === "github" ? (
                  <Github size={24} class="fill-foreground" />
                ) : link.platform === "linkedin" ? (
                  <LinkedIn size={24} class="fill-foreground" />
                ) : link.platform === "email" ? (
                  <Mail size={24} class="fill-foreground" />
                ) : (
                  <span class="font-chi text-base font-bold uppercase">
                    {link.platform.slice(0, 2)}
                  </span>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </Dialog>
  </div>
</section>
