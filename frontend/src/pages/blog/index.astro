---
import Layout from "@layouts/Layout.astro";
import { fetchMeta } from "@utils/content/meta";

const siteMeta = await fetchMeta();
const posts = [
  {
    title: "Streaming Architecture Patterns",
    slug: "streaming-architecture-patterns",
    pubDate: "2024-05-15",
    description:
      "Exploring modern streaming architecture patterns for scalable applications.",
  },
  {
    title: "Improving Developer Experience",
    slug: "improving-developer-experience",
    pubDate: "2024-04-10",
    description:
      "Tips and tricks to enhance the developer experience in your projects.",
  },
  {
    title: "Colorful Experiments with CSS",
    slug: "colorful-experiments-with-css",
    pubDate: "2024-03-22",
    description: "A dive into creative CSS techniques for vibrant web designs.",
  },
];
---

<Layout>
  <section class="glow-card">
    <div class="section-title">
      <h2>Blog & Notes</h2>
      <span class="pill">{siteMeta.name}</span>
    </div>
    <p class="mb-3.5 text-(--muted)">
      Streaming architecture thoughts, DX rants, and colorful experiments. Posts
      are wired for a CMS APIâ€”swap this data source when ready.
    </p>
    <div class="grid gap-3.5">
      {
        posts.map((post) => (
          <article class="glow-card p-4">
            <div class="flex items-center justify-between gap-2.5">
              <h3 class="m-0">{post.title}</h3>
              <span class="pill">{post.pubDate}</span>
            </div>
            <p class="mt-2 mb-3 text-(--muted)">{post.description}</p>
            <a class="btn" href={`/blog/${post.slug}`}>
              Read draft
            </a>
          </article>
        ))
      }
    </div>
  </section>
</Layout>
