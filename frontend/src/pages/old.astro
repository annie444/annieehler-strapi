---
import Layout from "../layouts/Layout.astro";
import {
  siteMeta,
  services,
  projects,
  experience,
  posts,
  skills,
} from "../content/siteData";
---

<Layout>
  <section class="card">
    <div class="overlay"></div>
    <div class="relative z-10 grid items-center gap-5 sm:grid-cols-2">
      <div class="flex flex-col gap-3">
        <p class="pill">Location: {siteMeta.location}</p>
        <h1
          class="glitch text-[clamp(32px,4vw,48px)] leading-tight font-bold text-balance"
          data-text={siteMeta.name}
        >
          {siteMeta.name}
        </h1>
        <p class="text-sm text-[#a5b4d6]">{siteMeta.title}</p>
        <p class="max-w-2xl text-base leading-relaxed text-[#e9f2ff]">
          {siteMeta.tagline}
        </p>
        <div class="mt-1 flex flex-wrap gap-3">
          <a class="btn" href={siteMeta.heroCta.resume}>View Resume</a>
          <a class="btn" href={siteMeta.heroCta.contact}>Book a build</a>
        </div>
      </div>
      <div
        class="card animate-floaty border-dashed border-white/20 bg-[rgba(14,18,34,0.9)] p-8 text-center"
      >
        <div class="overlay"></div>
        <div class="relative z-10 space-y-2">
          <p class="text-xs tracking-wide text-[#a5b4d6] uppercase">
            Playful systems energy
          </p>
          <h3
            class="bg-linear-to-r from-[#7cffc4] via-[#ff71f6] to-[#5ecbff] bg-clip-text text-2xl font-semibold text-transparent"
          >
            matrix × skittles
          </h3>
          <p class="text-sm text-[#a5b4d6]">
            Animations live here · gradients everywhere
          </p>
        </div>
      </div>
    </div>
    <div class="relative z-10 mt-4 overflow-hidden">
      <div class="animate-scroll flex gap-3">
        {
          skills
            .concat(skills)
            .map((skill) => <span class="pill">{skill}</span>)
        }
      </div>
    </div>
  </section>

  <section id="services" class="card">
    <div class="overlay"></div>
    <div class="relative z-10 space-y-4">
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl font-semibold tracking-wide">Services</h2>
        <span class="pill">Systems + Web</span>
      </div>
      <div class="grid gap-4 md:grid-cols-3">
        {
          services.map((service) => (
            <article class="card p-5">
              <div class="overlay" />
              <div class="relative z-10 space-y-2">
                <h3 class="text-lg font-semibold">{service.title}</h3>
                <p class="text-sm leading-relaxed text-[#a5b4d6]">
                  {service.blurb}
                </p>
                <div class="flex flex-wrap gap-2">
                  {service.tags.map((tag) => (
                    <span class="pill">{tag}</span>
                  ))}
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section id="projects" class="card">
    <div class="overlay"></div>
    <div class="relative z-10 space-y-4">
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl font-semibold tracking-wide">Featured Builds</h2>
        <span class="pill">Recent</span>
      </div>
      <div class="grid gap-4 md:grid-cols-3">
        {
          projects.map((project) => (
            <article class="card p-5">
              <div class="overlay" />
              <div class="relative z-10 space-y-3">
                <div class="flex items-center justify-between gap-3">
                  <h3 class="text-lg font-semibold">{project.name}</h3>
                  <span class="pill">{project.status}</span>
                </div>
                <p class="text-sm leading-relaxed text-[#a5b4d6]">
                  {project.summary}
                </p>
                <div class="flex flex-wrap gap-2">
                  {project.stack.map((stack) => (
                    <span class="pill">{stack}</span>
                  ))}
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section id="experience" class="card">
    <div class="overlay"></div>
    <div class="relative z-10 space-y-4">
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl font-semibold tracking-wide">Experience</h2>
        <span class="pill">Systems & Product</span>
      </div>
      <div class="grid gap-4">
        {
          experience.map((entry) => (
            <article class="card p-5">
              <div class="overlay" />
              <div class="relative z-10 space-y-3">
                <div class="flex items-center justify-between gap-3">
                  <div>
                    <h3 class="text-lg font-semibold">{entry.role}</h3>
                    <p class="text-sm text-[#a5b4d6]">{entry.company}</p>
                  </div>
                  <span class="pill">{entry.period}</span>
                </div>
                <ul class="grid list-disc gap-2 pl-5 text-sm leading-relaxed text-[#a5b4d6]">
                  {entry.achievements.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section id="blog" class="card">
    <div class="overlay"></div>
    <div class="relative z-10 space-y-4">
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl font-semibold tracking-wide">Latest Posts</h2>
        <a class="pill" href="/blog/1">View all</a>
      </div>
      <div class="grid gap-4 md:grid-cols-2">
        {
          posts.slice(0, 2).map((post) => (
            <article class="card p-5">
              <div class="overlay" />
              <div class="relative z-10 space-y-3">
                <p class="pill w-fit">{post.pubDate}</p>
                <h3 class="text-lg font-semibold">{post.title}</h3>
                <p class="text-sm leading-relaxed text-[#a5b4d6]">
                  {post.description}
                </p>
                <a class="btn" href={`/blog/${post.slug}`}>
                  Read draft
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section id="contact" class="card">
    <div class="overlay"></div>
    <div class="relative z-10 space-y-4">
      <div class="flex items-center justify-between gap-3">
        <h2 class="text-xl font-semibold tracking-wide">Contact</h2>
        <span class="pill">Let's build</span>
      </div>
      <p class="text-base leading-relaxed text-[#a5b4d6]">
        Need a system design review, a full-stack launch, or a colorful
        experiment? Drop a line and I’ll make it weird, stable, and shippable.
      </p>
      <div class="flex flex-wrap gap-3">
        {
          siteMeta.social.map((link) => (
            <a class="btn" href={link.href}>
              Discuss via {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
