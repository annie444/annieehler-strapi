---
import Layout from "@layouts/Layout.astro";
import Projects from "@components/Projects.astro";
import Hero from "@components/Hero2.astro";
import ExperienceSection from "@components/experience/ExperienceSection.astro";
import { fetchProjects } from "@utils/content/project";
import { fetchMeta } from "@utils/content/meta";
import { fetchExperience } from "@utils/content/experience";
import { fetchHero } from "@utils/content/hero";

// Fetch all data in parallel
const [projects, siteMeta, experience, hero] = await Promise.all([
  fetchProjects(),
  fetchMeta(),
  fetchExperience(),
  fetchHero(),
]);
---

<Layout {...siteMeta}>
  <Hero {...hero} />
  <ExperienceSection experience={experience} />
  <Projects projects={projects} />
</Layout>
