{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Portfolio projects with detailed case studies"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "text": {
      "type": "blocks"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "projects"
    },
    "link": {
      "type": "string"
    },
    "problem": {
      "type": "text"
    },
    "constraints": {
      "type": "json"
    },
    "approach": {
      "type": "text"
    },
    "result": {
      "type": "text"
    },
    "codeUrl": {
      "type": "string"
    },
    "liveUrl": {
      "type": "string"
    },
    "screenshots": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "diagram": {
      "type": "text"
    },
    "projectStatus": {
      "type": "enumeration",
      "required": true,
      "default": "completed",
      "enum": [
        "completed",
        "in-progress",
        "archived"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
