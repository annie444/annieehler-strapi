{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Content authors and contributors"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "github": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "linkedin": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "firstName",
      "required": true
    },
    "blogPosts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "author"
    },
    "pages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::page-meta.page-meta",
      "mappedBy": "authors"
    }
  }
}
